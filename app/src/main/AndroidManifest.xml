<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.book_store1"> <!-- Make sure this matches your actual package name -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Book_store1"
        tools:targetApi="31">

        <!-- Main Launcher Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login and Registration Activities -->
        <activity android:name=".LoginActivity"
            tools:ignore="Instantiatable" />
        <activity android:name=".RegisterActivity"
            tools:ignore="Instantiatable" />

        <!-- Other Activities -->
        <activity
            android:name=".CardBookLatestActivity"
            android:label="Latest Books" />

        <activity
            android:name=".CardBookTrendingActivity"
            android:label="Trending Books" />

        <activity
            android:name=".CardBookBestSellingPrice"
            android:label="Best Selling Books" />

        <activity android:name=".CategoriesActivity" />

    </application>

</manifest>
