<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your main content goes here -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_toolbar"
        android:background="#FAFAFA" />

    <!-- Bottom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Home"

                android:scaleType="centerInside"
                android:src="@drawable/home_new_4_imresizer" />

            <ImageButton
                android:id="@+id/wishlist_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FEFFFFFF"
                android:contentDescription="Wishlist"
                android:scaleType="centerInside"
                android:src="@drawable/heart_new4_imresizer"

                tools:src="@drawable/heart_new4_imresizer" />

            <ImageButton
                android:id="@+id/cart_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cart"
                android:scaleType="centerInside"
                android:src="@drawable/shopping_cart_new_imresizer"
                tools:src="@drawable/shopping_cart_new_imresizer" />

            <ImageButton
                android:id="@+id/account_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Account"
                android:scaleType="centerInside"
                android:src="@drawable/user_new_3_imresizer"
                tools:src="@drawable/user_new_3_imresizer" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
