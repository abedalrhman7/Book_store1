<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content layout -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Main card content -->
        <include
            layout="@layout/main_card_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:layout_weight="1" />

        <!-- Book cover card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/bookCoverCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/guardian_of_the_sky" />
        </androidx.cardview.widget.CardView>

        <!-- Open book detail button -->
        <Button
            android:id="@+id/openBookDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Guardian Book Detail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- Toolbar -->
        <include
            layout="@layout/tollbar"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Navigation drawer menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:itemBackground="@drawable/nav_menu_item_background" />

</androidx.drawerlayout.widget.DrawerLayout>
