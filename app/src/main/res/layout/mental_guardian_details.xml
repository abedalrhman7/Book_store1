<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButtonFavGuardian"
                android:layout_width="56dp"
                android:layout_height="71dp"
                android:layout_marginTop="296dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#40FFFFFF"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/star_big_on"
                tools:ignore="SpeakableTextPresentCheck"
                tools:srcCompat="@drawable/heart" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="236dp"
                android:layout_height="289dp"
                android:layout_marginStart="86dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonFavGuardian"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/guardian_of_the_sky" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Guardian OF The Sky"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="349dp"
                android:layout_height="486dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="We all have a voice inside us that tells us what we do not want to hear, warns us before any harm, attempts to save us from a predicament before we get caught up in it. Some distinguish it among the din of voices and noise within us, while others are unaware of its existence, or rather, have decided to lower its volume to plunge into the depths of this life! The urgency of this voice varies from one situation to another, and from one person to another, but it exists and cannot be denied.The names for this voice differ among people; it has been called intuition, the subconscious mind, the whisperer, the sixth sense, the loyal friend, and many other different names!Are you one of those people who focus on this voice? Or are you among those who ignore it as if it were low background music that is almost inaudible?!"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>